<div class="main">
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="#">
				<em class="fa fa-home"></em>
			</a></li>
			<li class="active">Users</li>
		</ol>
	</div><!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Users</h1>
		</div>
	</div><!--/.row-->

	<div class="panel panel-container">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Email</th>
					<th>Avatar</th>
					<th colspan="3">Actions</th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.email %></td>
						<% if user.avatar? %>
							<td><%= image_tag(user.avatar.thumb.url) %></td>
						<% elsif user.image? %>
							<td><%= image_tag(user.image) %></td>
						<% else %>
							<td></td>
						<% end %>
						<td><%= link_to 'Show user profile', admin_user_path(user.id), class: 'btn btn-warning' %></td>
						<td><%= link_to 'Edit user profile', edit_admin_user_path(user.id), class: 'btn btn-primary' %></td>
						<td><%= link_to 'Delete user', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger', remote: true %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
