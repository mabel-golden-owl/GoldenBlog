<%= form_with(model: @post) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, class: "edit-post" %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.file_field :image, class: "edit-post" %>
  </p>

  <p>
    <%= f.label :category , "Choose a category" %>
    <%= f.collection_select :category_id, @categories, :id, :name, prompt: "Select Category" %>
  </p>

  <%= f.submit %>
<% end %>
