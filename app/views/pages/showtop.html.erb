<h1>Top Posts</h1>
<p>
  <%= form_tag('/pages/create_posts', method: "POST" ) do %>
    <%= select_tag "choice", options_for_select(["Today", "Week", "Month"]) %>
    <%= submit_tag "Show posts", class: "btn btn-primary" %>
  <% end %>
</p>

<% if @posts %>
<strong>Showing top posts of <%= @choice.upcase() %></strong>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Number of Likes</th>
      <th>Link</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |p|%>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.user.email %></td>
      <td><%= p.likes.count %></td>
      <td><%= link_to 'Show post', post_path(p) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'Back', root_path %>
