<h1>Users</h1>
<p>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Email</th>
        <th>Avatar</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <% if user.avatar? %>
          <td><%= image_tag(user.avatar.thumb.url) %></td>
        <% elsif user.image? %>
          <td><%= image_tag(user.image) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Show user profile', user_path(user.id) %></td>
        <td><%= link_to 'Delete user', user_path(user.id), method: :delete, data: {confirm: 'Are you sure you want to delete this user?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'Back', root_path %>
