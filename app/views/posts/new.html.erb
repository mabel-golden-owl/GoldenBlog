<h1>New Post</h1>

<%= form_with(model: [ @user, Post.new ]) do |f| %>
<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
</p>

<p>
    <%= f.label :image %>
    <%= f.file_field :image %>
</p>

<%= f.submit %>
<% end %>
<br>

<%=link_to 'Back', posts_path %>
