<h1>Top Posts</h1>
<p>
  <%= form_tag(top_posts_path, method: :get, remote: true, class: 'show_top') do |f| %>
    <%= select_tag "choice", options_for_select(["Select a time", "Today", "Week", "Month"], params[:choice]) %>
    <%= button_tag 'Submit' %>
  <% end %>
</p>

<strong><%= params[:choice].try('upcase') %></strong>
<table class="table table-bordered table-posts">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Number of Likes</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    <%= render 'post_item', locals: { posts: @posts } %>
  </tbody>
</table>

<%= link_to 'Back', root_path %>
