<% if user_signed_in? %>
  <h1>Hello <strong><%= current_user.email %></strong>, welcome to GoldenBlog!</h1>
  <h3>Profile</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Avatar</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= current_user.first_name %></td>
        <td><%= current_user.last_name %></td>
        <td><%= current_user.age %></td>
        <td><%= current_user.gender %></td>
        <% if current_user.avatar? %>
          <td><%= image_tag(current_user.avatar.thumb.url) %></td>
        <% elsif current_user.image? %>
          <td><%= image_tag(current_user.image) %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  <br><br>

  <%= link_to "Add New Post", new_post_path, class: 'btn btn-primary' %>
  <%= link_to "Category", categories_path, class: 'btn btn-primary' %>
  <%= link_to "Top Posts", pages_showtop_path, class: 'btn btn-primary' %>
  <% if current_user.role == "admin"%>
    <%= link_to "Users Index", users_index_path, class: 'btn btn-primary' %>
    <%= link_to "Manage Posts"%>
  <% end %>
  <p>Let's share blogs to everyone!</p>

<% else %>
  <h1>Hello, welcome to GoldenBlog!</h1>
  <p>Let's share blogs to everyone!</p>
  <%= link_to "Sign up", new_user_registration_path, class: 'navbar-link' %> |
  <%= link_to "Login", new_user_session_path, class: 'navbar-link' %> |
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% end %>
<br><br>

<h3>Posts</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.content %></td>
      <td><%= image_tag(p.image.thumb.url) %></td>
      <td><%= link_to 'Show post', post_path(p) %></td>
      <% if current_user.role == 'admin' %>
        <td><%= link_to 'Edit post', edit_post_path(p) %></td>
        <td><%= link_to 'Destroy', post_path(p), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
