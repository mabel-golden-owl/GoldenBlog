<h1>Category: <%= @category.name.upcase() %></h1>
<h3>Description: <%= @category.description %></h3>
<%= link_to "Add new #{@category.name} post", new_category_post_path(@category), class:"btn btn-primary" %>
<br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Post</th>
      <th>Author</th>
      <th>Link</th>
    </tr>
  </thead>

  <tbody>
    <% @category.posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.user.email %></td>
      <td><%= link_to "Show post", post_path(post), class: "btn btn-warning"%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", categories_path %>
